<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <!-- This Appender will put your logs into the XetaReport. -->
    <appender name="TesterraLogger" class="eu.tsystems.mms.tic.testframework.report.TesterraLogger">
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] [%-5p]: %c{2} - %m%n" />
        </layout>
    </appender>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] [%-5p]: %c{2} - %m%n" />
        </layout>
    </appender>

    <!-- Define your own log level for your packages -->
    <logger name="eu.tsystems.mms.my.package">
        <level value="DEBUG" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="console" />
        <appender-ref ref="TesterraLogger" />
    </root>
</log4j:configuration>
