{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "skipLibCheck": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "moduleResolution": "node",
        "baseUrl": "src"
    },
    "atom": {
        "rewriteTsconfig": false
    }
}
